GREEN="\e[32m"
RED="\e[31m"
CYAN="\e[35m"
RST="\e[0m"
RESALT="\e[41m"
BLINK="\e[5m"
BLUE="\e[34m"
YELLOW="\e[93m"
LGRE="\e[92m"
AST="$GREEN*$RST"
ERR="$BLINK$RESALT ERROR $RST"
WAR="$BLINK$LYEL WARNING $RST"
INF="$LGRE INFO $RST"
BULLET="$GREEN o $RST"

# updated
START="$GREEN*$RST"
ERROR="$RED ERROR! $RST"
WARNING="$BLINK$YELLOW !!! $RST"
INFO="$GREEN INFO:$RST"
ALERT="$RESALT ALERT! $RST"
OK="[$GREEN OK $RST ]"





